#pragma once

/**
 * Build Information
 */
#define TERMINUS_LOG_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define TERMINUS_LOG_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define TERMINUS_LOG_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define TERMINUS_LOG_VERSION_STR   "@PROJECT_VERSION@"

#define TERMINUS_LOG_BUILD_DATE    "@PROJECT_BUILD_DATE@"

#define TERMINUS_LOG_GIT_COMMIT_HASH   "@TERMINUS_GIT_COMMIT_HASH@"

// C++ Standard Libraries
#include <map>
#include <string>

namespace tmns::log {

/**
 * @brief Get the build info this library was compiled with
 */
inline std::map<std::string,std::string> get_build_info()
{
    return {
        { "TERMINUS_LOG_VERSION_MAJOR",   std::to_string( TERMINUS_LOG_VERSION_MAJOR ) },
        { "TERMINUS_LOG_VERSION_MINOR",   std::to_string( TERMINUS_LOG_VERSION_MINOR ) },
        { "TERMINUS_LOG_VERSION_PATCH",   std::to_string( TERMINUS_LOG_VERSION_PATCH ) },
        { "TERMINUS_LOG_VERSION_STR",     std::string{ TERMINUS_LOG_VERSION_STR } },
        { "TERMINUS_LOG_BUILD_DATE",      std::string{ TERMINUS_LOG_BUILD_DATE } },
        { "TERMINUS_LOG_GIT_COMMIT_HASH", std::string{ TERMINUS_LOG_GIT_COMMIT_HASH } }
    };
}

} // End of tmns::log namespace